<div class="account-container-wrapper">
    <div class="account-container">
        <h5 class="title">
            MY ACCOUNT
        </h5>
        <div class="account-menu">
            <div class="menu-item">
                <img src="{{ 'account-details.svg' | asset_url  }}"  />
                <p>Personal details</p>
            </div>
            <div class="menu-item">
                <img src="{{ 'account-orders.svg' | asset_url  }}" />
                <p>Orders</p>
            </div>
            <div class="menu-item">
                <img src="{{ 'account-details.svg' | asset_url  }}" />
                <p>Tracking Orders</p>
            </div>
            <div class="menu-item">
                <img src="{{ 'account-details.svg' | asset_url  }}" />
                <p>Returns</p>
            </div>
            <div class="menu-item">
                <img src="{{ 'account-details.svg' | asset_url }}" />
                <p>Log Out</p>
            </div>
        </div>

        <div class="content-wrapper">
            <div class='inside-content' id="personal-info-content">
                <div class="personal-details">
                    <div class="custom-input">
                        <label for="firstname">First Name</label>
                        <input type="text" id="firstname" name="first-name" />
                    </div>
                    <div class="custom-input">
                        <label for="surname">Last Name</label>
                        <input type="text" id="surname" name="surname" />
                    </div>
                    <div class="custom-input">
                        <label for="phone">Phone Number</label>
                        <input type="number" id="phone" name="phone" />
                    </div>
                    <div class="custom-input">
                        <label for="email">Email</label>
                        <input type="text" id="email" name="email" />
                    </div>
                    <div class="custom-input">
                        <label for="company">Company</label>
                        <input type="text" id="company" name="company" />
                    </div>
                    <div class="custom-input">
                        <label for="address1">Address 1</label>
                        <input type="text" id="address1" name="address1" />
                    </div>
                    <div class="custom-input">
                        <label for="address1">Address 2</label>
                        <input type="text" id="address2" name="address2" />
                    </div>
                    <div class="custom-input">
                        <label for="address3">House/ Apartment â„–</label>
                        <input type="text" id="address3" name="address3" />
                    </div>
                    <div class="custom-input">
                        <label for="city">City</label>
                        <input type="text" id="city" name="city" />
                    </div>
                    <div class="custom-input">
                        <label for="country">Country</label>
                        <input type="text" id="country" name="country" />
                    </div>
                    <div class="custom-input">
                        <label for="province">Province</label>
                        <input type="text" id="province" name="province" />
                    </div>
                    <div class="custom-input">
                        <label for="postcode">Postal / Zip Code</label>
                        <input type="number" id="postcode" name="postcode" />
                    </div>
                </div>
                <div class="change-password">
                    <p>Change Your Password</p>
                    <div class="custom-input">
                        <label for="current-pass">Current Password</label>
                        <input type="password" id="current-pass" name="current-pass" />
                    </div>
                    <div class="custom-input">
                        <label for="new-pass">New Password</label>
                        <input type="password" id="new-pass" name="new-pass" />
                    </div>
                    <div class="custom-input">
                        <label for="conf-pass">Confirm Your Password</label>
                        <input type="password" id="sconf-pass" name="conf-pass" />
                    </div>
                </div>
                <button> Save </button>
            </div>
            <div class='inside-content' id="orders-content">
                <div class="orders-list">
                    {% for order in customer.orders %}
                        <div class="order-wrapper">
                            <div class="status">
                                <p> Order Status: {{ order.financial_status_label }} / {{ order.fulfillment_status  }}</p>
                            </div>
                            <div class="info">
                                <div class="order-pieces-info">
                                    <div class="items-count">
                                        <p>Items: {{ order.item_count }}</p>
                                    </div>
                                    {% for orderItem in order.line_items %}
                                        <img src="{{ orderItem.product.featured_image | image_url: width: 100 }}">
                                    {% endfor %}
                                </div>
                                <div class="order-meta-info">
                                    <span> {{ order.created_at | date: "%d.%m.%Y" }}</span>
                                    <span> {{ order.total_price | money_with_currency }}</span>
                                    <a class="see-details" href="{{ order.order_status_url }}">See details</a>
                                </div>
                            </div>
                        </div>
                      {% endfor %}
                </div>
            </div>
            <div class='inside-content' id="tracking-content">
                <div class="input-wrapper">
                    <h5>TRACK YOUR ORDER</h5>
                    <input type="text" placeholder="Tracking Number">
                    <button>TRACK</button>
                </div>
            </div>
            <div class='inside-content' id="returns-content">
                d
            </div>
            <div class='inside-content' id="logout-content">
                e
            </div>
        </div>
    </div>
</div>
