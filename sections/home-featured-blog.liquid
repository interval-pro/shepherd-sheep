                  {% if article.excerpt.size > 0 %}
                  {{ article.excerpt }}
                  {% else %}
                  {{ article.content | strip_html | truncate: 75 }}
                  {% endif %}
                </div>
                {% endif %}
                {% if section.settings.blog_show_button %}
                <a href="{{ article.url }}" class="dt-sc-btn wow animated fadeInDown"> {{ 'blogs.article.read_more' | t }}</a> 
                {% endif %}
              </div>
            </div> 
            {% endfor %}
          </div>
        </div>        
        {% else %}
        {% if section.settings.enable_slider %}   <div class="dt-sc-swiper-slider swiper-container {% if section.settings.dots %} {{ section.settings.carousel_pagination_alignment }} {% endif %} {% if section.settings.arrows %} {{ section.settings.nav_arrow_position }} {{ section.settings.center_nav_arrow_alignment }} {% endif %}">    {% endif %}
        {% if section.settings.enable_slider %}   <div id="swiper-{{section.id}}-slider">    {% endif %}
        <div class="dt-sc-blog-section {% if section.settings.split_blog_layout %} style-2 {% endif %} {% if section.settings.enable_slider %}swiper-wrapper{% endif %} {% unless section.settings.enable_slider %}dt-sc-column{% endunless %}{% unless section.settings.enable_slider %} {{column}}{% endunless %}">        
          {% for article in blogs[section.settings.blog].articles limit: section.settings.post_limit %}
          <div class="dt-sc-blog-item {% if section.settings.enable_slider %}swiper-slide{% endif %} {{section.settings.text_position}} {{item_style}} {{section.settings.vertical_position}}"
               {% if section.settings.block_banner_style == 'overlay-style' %}style="min-height:{{ section.settings.overlay_style_height}}px"{% endif %}>
            <div class="dt-sc-blog-image {{ overlay_class}}">
              {% if article.image %}                  
              <div class="article__grid-image-wrapper wow animated fadeInDown">
                <a href="{{article.url}}">
                  {{ article.image | img_url: 'master' | img_tag: article.title, 'article__grid-image' }}
                </a>
              </div>                  
              {% endif %}
            </div>
            <div class="dt-sc-blog-content">

              <div class="dt-sc-blog-meta {% if section.settings.enable_blog_icons %}with-meta-icons{% endif %} wow animated fadeInDown">
                {% if section.settings.blog_show_author %}
                <p class="dt-sc-blog-author">
                  {% if section.settings.enable_blog_icons %}<span class="fa fa-user"></span>
                  {% else %}
                  {% include 'icon-author' %}  
                  {% endif %}
                  <span>{{ 'blogs.article.by_author' | t: author: article.author }}</span></p>
                {% endif %}
                {% if section.settings.blog_show_date %}
                <p class="dt-sc-blog-date">                    
                  {% if section.settings.enable_blog_icons %}
                  <span class="fa fa-calendar"></span>
                  {% else %}
                  {% include 'icon-date' %} 
                  {% endif %}
                  {{ article.published_at | date: "%b %Y" }}
                </p>
                {% endif %}    
                {% if section.settings.blog_comments %}
                {% if blog.comments_enabled? and article.comments_count > 0 %}
                <p class="dt-sc-blog-comment">
                  {% include 'icon-comment' %} {{ 'blogs.comments.comments_with_count' | t: count: article.comments_count }}
                  {% endif %}
                  {% endif %}
                  {% if section.settings.blog_show_tag %}
                  {% if article.tags.size > 0 %}
                <p class="dt-sc-blog-tags">                    
                  {% if section.settings.enable_blog_icons %}
                  <span class="fa fa-tags"></span>
                  {% else %}
                  {% include 'icon-tag' %}
                  {% endif %}
                  {% for tag in article.tags %}                  
                  <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="article__grid-tag">{{ tag }}</a>                  
                  {% endfor %}
                </p>
                {% endif %}
                {% endif %}
              </div>
              <h5 class="dt-sc-blog-title wow animated fadeInDown"><a href="{{article.url}}"> {{ article.title }}</a></h5>
              {% if section.settings.blog_show_description %}
              <div class="dt-sc-blog-description wow animated fadeInDown">
                {% if article.excerpt.size > 0 %}
                {{ article.excerpt }}
                {% else %}
                {{ article.content | strip_html | truncate: 150 }}
                {% endif %}
              </div>
              {% endif %}
              {% if section.settings.blog_show_button %}
              <a href="{{ article.url }}" class="dt-sc-btn wow animated fadeInDown"> {{ 'blogs.article.read_more' | t }}</a> 
              {% endif %}
            </div>
          </div> 
          {% endfor %}
        </div>   
        {% if section.settings.enable_slider %}  </div>{% endif %}
        {% if section.settings.enable_slider %}
        {% if section.settings.arrows %}                    
        <div class="swiper-{{ section.id}}-arrows swiper-arrows">
          <div id="swiper-{{ section.id}}-next" class="swiper-button-next dt-sc-btn"></div>
          <div id="swiper-{{ section.id}}-prev" class="swiper-button-prev dt-sc-btn"></div>
        </div>  
        {% endif  %} 
        {% if section.settings.dots %}
        <div id="swiper-{{ section.id}}-pagination" class="swiper-pagination"></div>
        {% endif %}
        {% endif  %}  
        {% if section.settings.enable_slider %}  </div>{% endif %}
        {% endif %}
        {% endunless %}
      </div>
    </div>
  </div>
</div>

