              <div class="dt-sc-blog-image {{ overlay_class}}">
                {% if article.image %}                  
                <div class="article__grid-image-wrapper wow animated fadeInDown">
                  <a href="{{article.url}}">
                    {%- assign img_url = article.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                    <img class="lazyload"
